<!--管理者トップページ（会員一覧ページ） 22P-->
<div class="container">

  <div class="row pt-5">
    <div class="col-md-5 text-center">
      <h4 class="d-inline px-3" style="background-color: #dfdfdf;"><strong>会員一覧</strong></h4>
    </div>
  </div>

  <div class="row my-4">
    <div class="col-md-6 mx-auto">
      <div class="table-responsive">
        <table class="table">
          <thead class="font-weight-bold" style="background-color: #dfdfdf;">
            <tr class="text-center">
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>会員ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>

              <% unless customer.email == "guest@example.com" %> <!--ゲストユーザーでなければ表示-->
                <tr class="text-center">
                  <td><%= customer.id %></td>
                  <td>
                    <%= link_to admin_customer_path(customer), style: "color: black; text-decoration: underline;" do %>
                      <%= customer.name %>
                    <% end %>
                  </td>
                  <td><%= customer.email %></td>
                  <td>
                    <% if customer.is_active == true %> <!--会員ステータスが有効なら-->
                      <p class="text-success font-weight-bold">有効</p>
                    <% else %>
                      <p class="text-danger font-weight-bold">退会</p>
                    <% end %>
                  </td>
                </tr>
              <% end %>

            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!--ページネーション-->
  <div class="row">
    <div class="col">
      <%= paginate @customers, class: "pagination" %>
    </div>
  </div>

</div>
