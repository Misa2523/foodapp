<div class="container">
  <div class="row pt-5">
    <h4><strong>食材保存場所一覧</strong></h4>
  </div>
  <div class="row">
    <%= link_to "新規登録", new_admin_food_strage_area_path, class: "btn btn-outline-success", style: "font-weight: bold;" %>
  </div>
  <div class="row pt-3 justify-content-center">
    <table>
      <thead>
        <tr>
          <th>食材名</th>
          <th>保存場所</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @food_strage_areas.each do |food_strage_area| %>
          <tr>
            <td><%= food_strage_area.name %></td>
            <td><%= food_strage_area.place %></td>
            <td>
              <%= link_to "編集", edit_admin_food_strage_area_path(food_strage_area), class: "btn btn-outline-success", style: "font-weight: bold;" %>
              <%= button_to "削除", admin_food_strage_area_path(food_strage_area), method: :delete, class: "btn btn-outline-danger", data: {confirm: '本当に削除しますか？'} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col">
      <%= paginate @food_strage_areas, class: "pagination" %>
    </div>
  </div>
</div>
