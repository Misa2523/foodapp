食材保存場所編集ページ 30P

<div class="container">
  <div class="row pt-5">
    <h4><strong>食材保存場所の編集</strong></h4>
  </div>
  <div class="row pt-3 justify-content-center">
    <%= form_with model: @food_strage_area, url: admin_food_strage_area_path do |f| %>
      <table>
        <tbody>
          <tr>
            <td><label>食材名</label></td>
            <td><%= f.text_field :name, autofocus: true %></td>
          </tr>
          <tr>
            <td><label>保存場所</label></td>
            <td colspan="2">
              <div>
                <% FoodStrageArea.places.keys.each do |place| %> <!--enumで定義した保存場所の値を取得し、ループでそれぞれの選択肢を生成-->
                  <%= f.radio_button :place, place %> <!--ラジオボタン-->
                  <%= f.label :place, place %> <!--ラベル-->
                <% end %>
              </div>
            </td>
          </tr>
          <tr>
            <td><%= f.submit "変更を保存", class: "btn btn-success", style: "font-weight: bold;" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
