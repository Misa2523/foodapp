<!--ジャンル一覧・追加ページ 31P-->
<div class="container">

  <div class="row pt-5">
    <div class="col-md-5 text-center">
      <h4 class="d-inline px-3" style="background-color: #dfdfdf;"><strong>ジャンル一覧・追加</strong></h4>
    </div>
  </div>

  <div class="row py-3 mx-5">
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <table>
        <tbody>
          <tr>
            <td class="pl-5"><%= f.label :"ジャンル名" %></td>
            <td class="pl-1"><%= f.text_field :name %></td>
            <td class="pl-3"><%= f.submit "新規登録", class: "btn btn-success", style: "font-weight: bold;" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>

  <div class="row my-4">
    <div class="col-md-9 mx-auto">
      <div class="table-responsive">
        <table class="table">
          <thead class="font-weight-bold" style="background-color: #dfdfdf;">
            <tr class="text-center">
              <th>ジャンル名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr class="text-center">
                <td><%= genre.name %></td>
                <td>
                  <div style="display: inline-block;">
                    <%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-sm btn-outline-success", style: "font-weight: bold;" %>
                  </div>
                  <div class="ml-3" style="display: inline-block;">
                    <%= button_to "削除", admin_genre_path(genre), method: :delete, class: "btn btn-sm btn-danger", data: {confirm: '本当に削除しますか？'} %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>
