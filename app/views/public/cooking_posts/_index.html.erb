<!--部分テンプレート：料理の投稿一覧-->

<div class="table-responsive">
  <table class="table">
    <thead class="font-weight-bold" style="background-color: #dfdfdf;">
      <tr class="text-center">
        <th>画像</th>
        <th>料理名</th>
        <th>投稿者</th>
      </tr>
    </thead>
    <tbody>
      <% cooking_posts.each do |cooking_post| %>
        <tr class="text-center">
          <td><%= image_tag cooking_post.get_cooking_post_image(70, 70) %></td>
          <td>
            <%= link_to cooking_post_path(cooking_post.id), style: "color: black; text-decoration: underline;" do %>
              <%= cooking_post.name %>
            <% end %>
          </td>
          <td><%= cooking_post.customer.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
