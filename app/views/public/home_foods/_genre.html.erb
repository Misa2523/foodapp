<!--部分テンプレート：家庭内食材においてのジャンル検索フォーム-->
<div>
  <table class="table">

    <tr>
      <th>ジャンル検索</th>
    </tr>

    <%= form_with url: genre_search_home_foods_path, method: :get do |f| %>
      <% genres.each do |genre| %>
        <tr>
          <td><%= link_to genre.name, genre_search_home_foods_path(genre_id: genre.id), style: "color: black; text-decoration: underline;", method: :get %></td>
        </tr>
      <% end %>
    <% end %>

  </table>
</div>